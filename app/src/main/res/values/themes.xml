<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DMSMobile" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    TEXT STYLE -->
    <style name="TextView" parent="Theme.MaterialComponents.DayNight"/>
    <style name="TextView.TitleSplashScreenNormal">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.TitleSplashScreenTablet">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.TitleLoginNormal36sp">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.TitleLoginNormal24sp">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextView.TitleLoginTablet">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textAlignment">center</item>
    </style>

